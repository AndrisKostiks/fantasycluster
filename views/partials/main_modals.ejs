<div class="modal fade tavern-modal" tabindex="-1" role="dialog" aria-labelledby="tavern-modal" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Adventurers Guild</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-6">
                            <div class="text-center">
                                <h3>
                                    Quests
                                </h3>
                            </div>
                            <div>
                                <% for ( let i = 0; i <= 2; i++ ) {%>
                            <% if (quests[i] != null ) {%>
                                    <p class= "mb-2"><%= quests[i].name %></p>
                                    <p class="small m-0">Condition: Kill <%= quests[i].cond.get("mamount") %> <%= quests[i].cond.get("mob") %>s </p>
                                    <p class="small m-0">Reward: <%= quests[i].reward.get("iamount") %> <%= quests[i].reward.get("item") %> </p>
                                    <form action="/game/get_quest" method="post">
                                        <input type="hidden" name="quest_id" value="<%= quests[i]._id%>">
                                        <input type="hidden" name="player_id" value="<%= player[0]._id %>">
                                        <input type="hidden" name="ql" value="<%= player[0].playersQL%>">
                                        <input role="button" class="btn btn-sm btn-outline-success" type="submit" value="Take Quest!">
                                    </form>
                                <br>
                                <%}%>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <h3>
                                    LeaderBoard
                                </h3>
                            </div>
                            <div>
                            <table class="table table-striped text-center table-sm table-hover table-dark">
                                    <thead>
                                        <tr>
                                            <th scope="col">Player</th>
                                            <th scope="col">LVL</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% bplayers.forEach(element => {%>
                                            <%players.forEach(cplayer => {%>
                                                <% if (cplayer.playersStats.toString() === element._id.toString()) {%>
                                        <tr>
                                            <th scope="col"><%= cplayer.name %> </th>
                                            <th scope="col"> <%= element.lvl %></th>
                                        </tr>
                                        <% }; %>
                                    <%})%>
                                <% }); %>
                                    </tbody>
                                </table>
                                        
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade lvl-modal" tabindex="-1" role="dialog" aria-labelledby="lvl-modal" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-success" id="exampleModalCenterTitle">Level Up!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="modal-body">
                <h5 class="text-danger" id="j_points">Points : </h5>
                <form action="/game/lvl" id="lvl-f" method="post">
                <div class="form-group d-flex flex-column">
                    <label for="lck">Strength:</label>
                    <input type="number" name="str" id="str" class="j_lvl_i" value="<%= stats[0].strength%>" placeholder="<%= stats[0].strength%>" min="<%= stats[0].strength%>">
                    <label for="agi">Agility:</label>
                    <input type="number" name="agi" id="agi" class="j_lvl_i" value="<%= stats[0].agility%>" placeholder="<%= stats[0].agility%>" min="<%= stats[0].agility%>">
                    <label for="wis">Wisdom:</label>
                    <input type="number" name="wis" id="wis" class="j_lvl_i" value="<%= stats[0].wisdom%>" placeholder="<%= stats[0].wisdom%>" min="<%= stats[0].wisdom%>">
                    <label for="lck">Intellegence:</label>
                    <input type="number" name="int" id="int" class="j_lvl_i" value="<%= stats[0].intellegence%>" placeholder="<%= stats[0].intellegence%>" min="<%= stats[0].intellegence%>">
                    <label for="lck">Luck:</label>
                    <input type="number" name="lck" id="lck" class="j_lvl_i" value="<%= stats[0].luck%>" placeholder="<%= stats[0].luck%>" min="<%= stats[0].luck%>">
                    <input type="hidden" name="_id" id="_id" value='<%= player[0]._id%>'>
                </div>
                <input type="submit" role="button" class="btn btn-outline-success" value="Confirm">
            </form>
                      
            </div>
        </div>
    </div>
</div>
