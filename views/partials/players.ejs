<% if(typeof user.usersPlayers !== 'undefined' && user.usersPlayers.length > 0) {%>
<div class="row">
    <div class="col-4">
        <div class="list-group" role="tablist" id="list-tab">
            
            <% players.forEach(player => { %>
            <a class="list-group-item j_player_card list-group-item-action" id="list-<%= player._id %>-list" data-toggle="list" href="#list-<%= player._id %>" role="tab" aria-controls="<%= player._id %>">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1" ><%= player.name %></h5>
                    <small>Level <%= player.lvl %> <%= player.pclass %></small>
                </div>
                <input type="hidden" class="j_player" value="<%= player.id %>">
                <p class="mb-1">Location: Beginner City</p>
                <small>exp: <%= player.exp %></small>
            </a>
            <% }) %>
        
        </div>
    </div>
    <div class="col-8">
        
            <div class="tab-content" id="nav-tabContent">
            <% players.forEach(player => { %>
                <div class="tab-pane fade" id="list-<%= player._id %>" role="tabpanel" aria-labelledby="list-<%= player._id %>-list">
                    <table class="table table-dark table-sm table-striped">
                        <thead>
                        <tr>
                            <th scope="col">Strength</th>
                            <th scope="col">Agility</th>
                            <th scope="col">Intellegence</th>
                            <th scope="col">Wisdom</th>
                            <th scope="col">Luck</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td><%= player.strength %></td>
                            <td><%= player.agility %></td>
                            <td><%= player.intellegence %></td>
                            <td><%= player.wisdom %></td>
                            <td><%= player.luck %></td>
                        </tr>
                        
                        </tbody>
                    </table>
                </div>
            <% }) %>
            </div>
        </div>
    
</div>
<% }else{ %>
<div class="row">
    <div class="col-4">
        <div class="list-group" role="tablist" id="list-tab">
            <a class="list-group-item list-group-item-action" id="list-user-list" data-toggle="list" href="#list-user" role="tab" aria-controls="user">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1" >John Doe</h5>
                    <small>Level 1 Gunner</small>
                </div>
                <p class="mb-1">Location: Beginner City</p>
                <small>exp: 13/37</small>
            </a>
            <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1" >John Doe</h5>
                    <small>Level 1 Gunner</small>
                </div>
                <p class="mb-1">Location: Beginner City</p>
                <small>exp: 13/37</small>
            </a>
        </div>
        
        
    </div>
    <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade" id="list-user" role="tabpanel" aria-labelledby="list-user-list">
                <table class="table table-dark table-sm table-striped">
                    <thead>
                      <tr>
                        <th scope="col">Strength</th>
                        <th scope="col">Agility</th>
                        <th scope="col">Intelegence</th>
                        <th scope="col">Wisdom</th>
